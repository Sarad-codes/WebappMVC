@model Firstwebapp.Models.UserModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>User Registration</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Name Field -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Field -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input asp-for="Phone" class="form-control" placeholder="9841234567" />
                            </div>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                            <small class="text-muted">Enter 10-digit mobile number</small>
                        </div>

                        <!-- Age Field -->
                        <div class="mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="Age" class="form-control" type="number" min="0" max="100" placeholder="Enter age" />
                            </div>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Register
                            </button>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}