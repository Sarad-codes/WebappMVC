@model Firstwebapp.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>User Registration</title>
    <link rel="stylesheet" href="~/css/Register.css" />
</head>
<body class="register-bg">
<div class="container">
    <h2>User Registration</h2>
        
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" placeholder="Enter your full name"/>
            <span asp-validation-for="Name" class="error"></span>
        </div>
            
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" placeholder="your@email.com" />
            <span asp-validation-for="Email" class="error"></span>
        </div>
            
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" type="number" placeholder="Enter your age" />
            <span asp-validation-for="Age" class="error"></span>
        </div>
        <div class="button-group">
            <button type="submit" class="btn">Register</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
</body>
</html>