@model Firstwebapp.Models.UserModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-user me-2"></i>User Details</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                        <h3 class="mt-3">@Model.Name</h3>
                    </div>

                    <table class="table table-bordered">
                        <tr>
                            <th class="bg-light" style="width: 40%">ID</th>
                            <td><code>@Model.Id</code></td>
                        </tr>
                        <tr>
                            <th class="bg-light">Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Phone</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Age</th>
                            <td>@Model.Age</td>
                        </tr>
                    </table>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning flex-fill">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="List" class="btn btn-secondary flex-fill">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>