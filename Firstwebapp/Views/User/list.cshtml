@model List<Firstwebapp.Models.UserModel>
@using Firstwebapp.Models

@{
    ViewData["Title"] = "User List";
    var currentFilter = ViewBag.CurrentFilter ?? "All";
}

<div class="container-fluid px-3 px-md-4 py-4">
    <!-- Header with title and add button -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <h2 class="mb-3 mb-md-0">
            <i class="fas fa-users me-2 text-primary"></i>User Management
        </h2>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-primary w-100 w-md-auto">
            <i class="fas fa-plus me-2"></i>Add New User
        </a>
    </div>

    <!-- Filter Buttons - Stack on mobile, row on desktop -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="btn-group w-100 w-md-auto mb-3 mb-md-0" role="group">
            <a asp-action="List" asp-route-filter="All" 
               class="btn btn-outline-primary @(currentFilter == "All" ? "active" : "")">
                All Users
            </a>
            <a asp-action="List" asp-route-filter="Active" 
               class="btn btn-outline-success @(currentFilter == "Active" ? "active" : "")">
                Active
            </a>
            <a asp-action="List" asp-route-filter="Inactive" 
               class="btn btn-outline-secondary @(currentFilter == "Inactive" ? "active" : "")">
                Inactive
            </a>
        </div>
        <span class="badge bg-light text-dark p-2">
            <i class="fas fa-users me-1"></i> @Model.Count() users
        </span>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- User Cards (Mobile) + Table (Desktop) -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-user-slash fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">No users found</h5>
            <a asp-action="Register" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Add Your First User
            </a>
        </div>
    }
    else
    {
        <!-- Desktop Table View (hidden on mobile) -->
        <div class="d-none d-md-block">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Age</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="ps-4 fw-semibold">@user.Name</td>
                                        <td>@user.Email</td>
                                        <td>@user.Phone</td>
                                        <td>@user.Age</td>
                                        <td>
                                            @if (user.Status == UserStatus.Active)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="d-flex gap-2 justify-content-end">
                                                <a asp-action="Details" asp-route-id="@user.Id" 
                                                   class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                
                                                <a asp-action="Edit" asp-route-id="@user.Id" 
                                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                
                                                @if (user.Status == UserStatus.Active)
                                                {
                                                    <form asp-action="Deactivate" asp-route-id="@user.Id" 
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                                title="Deactivate" onclick="return confirm('Deactivate this user?')">
                                                            <i class="fas fa-ban"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-action="Activate" asp-route-id="@user.Id" 
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-success" 
                                                                title="Activate" onclick="return confirm('Activate this user?')">
                                                            <i class="fas fa-check-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile Card View (visible only on mobile) -->
        <div class="d-block d-md-none">
            <div class="row g-3">
                @foreach (var user in Model)
                {
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <!-- Header with name and status -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0 fw-semibold">@user.Name</h5>
                                    @if (user.Status == UserStatus.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                                
                                <!-- Details grid -->
                                <div class="row mb-3">
                                    <div class="col-5 text-muted">Email:</div>
                                    <div class="col-7">@user.Email</div>
                                    
                                    <div class="col-5 text-muted">Phone:</div>
                                    <div class="col-7">@user.Phone</div>
                                    
                                    <div class="col-5 text-muted">Age:</div>
                                    <div class="col-7">@user.Age</div>
                                </div>
                                
                                <!-- Action buttons -->
                                <div class="d-flex gap-2 flex-wrap">
                                    <a asp-action="Details" asp-route-id="@user.Id" 
                                       class="btn btn-sm btn-outline-info flex-fill">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    
                                    <a asp-action="Edit" asp-route-id="@user.Id" 
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    
                                    @if (user.Status == UserStatus.Active)
                                    {
                                        <form asp-action="Deactivate" asp-route-id="@user.Id" 
                                              method="post" class="flex-fill">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-warning w-100" 
                                                    onclick="return confirm('Deactivate this user?')">
                                                <i class="fas fa-ban me-1"></i>Deactivate
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Activate" asp-route-id="@user.Id" 
                                              method="post" class="flex-fill">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-success w-100" 
                                                    onclick="return confirm('Activate this user?')">
                                                <i class="fas fa-check-circle me-1"></i>Activate
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>